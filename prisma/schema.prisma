generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Calendar {
  id          Int       @id @default(autoincrement())
  year        Int
  title       String
  description String?
  isPublished Boolean   @default(true)
  coverImage  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  kindeUserId String?
  isFake      Boolean   @default(false)
  pictures    Picture[] @relation("CalendarToPictures")

  @@index([kindeUserId])
}

model Picture {
  id         Int      @id @default(autoincrement())
  day        Int
  key        String
  isOpenable Boolean  @default(false)
  isOpen     Boolean  @default(false)
  date       DateTime
  year       Int
  calendarId Int
  calendar   Calendar @relation("CalendarToPictures", fields: [calendarId], references: [id], onDelete: Cascade)

  @@unique([day, calendarId])
}
