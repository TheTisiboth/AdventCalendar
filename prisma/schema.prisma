// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Calendar {
  id          Int       @id @default(autoincrement())
  year        Int       @unique
  title       String
  description String?
  isPublished Boolean   @default(true)
  isFake      Boolean   @default(false) // True for test/demo calendars with fake pictures
  coverImage  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  kindeUserId String?   // Kinde user ID - null means accessible to admins only

  pictures    Picture[] @relation("CalendarPictures")

  @@index([kindeUserId])
}

model Picture {
  id         Int      @id @default(autoincrement())
  day        Int
  year       Int
  key        String   // For real calendars: S3 key (e.g., "2023/1.jpg"). For fake calendars: full URL (e.g., "https://picsum.photos/...")
  isOpenable Boolean  @default(false)
  isOpen     Boolean  @default(false)
  date       DateTime

  calendar   Calendar @relation("CalendarPictures", fields: [year], references: [year])

  @@unique([day, year])
}
