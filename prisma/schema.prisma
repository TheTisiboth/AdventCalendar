// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  role     String
  password String
}

model Calendar {
  id          Int       @id @default(autoincrement())
  year        Int       @unique
  title       String
  description String?
  isArchived  Boolean   @default(false)
  isPublished Boolean   @default(true)
  coverImage  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  kindeUserId String?   // Kinde user ID - null means accessible to admins only

  pictures    Picture[] @relation("CalendarPictures")

  @@index([kindeUserId])
}

model Picture {
  id         Int      @id @default(autoincrement())
  day        Int
  year       Int
  key        String
  isOpenable Boolean  @default(false)
  isOpen     Boolean  @default(false)
  date       DateTime

  calendar   Calendar @relation("CalendarPictures", fields: [year], references: [year])

  @@unique([day, year])
}

model DummyPicture {
  id         Int      @id @default(autoincrement())
  day        Int
  year       Int
  key        String
  isOpenable Boolean  @default(false)
  isOpen     Boolean  @default(false)
  date       DateTime

  @@unique([day, year])
}

model RefreshToken {
  id    Int    @id @default(autoincrement())
  token String @unique
}
